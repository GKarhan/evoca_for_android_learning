<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="33dp"
    android:layout_marginRight="33dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.evoca.evocaforandroidlearning.fragments.ExerciseFragment">


    <ImageView
        android:layout_width="80dp"
        android:layout_marginTop="40dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />
    <TextView
        android:background="#367400"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:textColor="#F4F4F4"
        android:gravity="center"
        android:text="Exercise1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
    <TextView
        android:textSize="16dp"
        android:text="Loren ipsum is _____ dummy text of the printing and typesetting indusstry"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:text="Ispum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:text="Dummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:text="Printing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:text="typesetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exercise"
        android:layout_marginTop="30dp"
        android:textColor="#F4F4F4"
        android:text="Chack"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:background="#367400"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>
</LinearLayout>
