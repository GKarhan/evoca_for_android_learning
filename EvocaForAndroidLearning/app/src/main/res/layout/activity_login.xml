<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="33dp"
    android:layout_marginRight="33dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vacho.myapplication999.LoginActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="39dp"
        android:src="@drawable/logo"
        android:layout_width="88dp"
        android:layout_weight="4"
        android:layout_height="0dp" />

    <TextView
        android:layout_marginTop="50dp"
        android:text="Login to your acount"
        android:textSize="18dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:background="#367400" />
    </LinearLayout>
    <TextView

        android:text="Username:"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/et_login_username"
        android:background="@drawable/login_username"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <TextView
        android:text="Password:"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/et_login_password"
        android:layout_weight="1"
        android:background="@drawable/login_username"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_login_button"
        android:textAllCaps="false"
        android:text="Login"
        android:textSize="18dp"
        android:layout_weight="1.5"
        android:textColor="#F4F4F4"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <FrameLayout
        android:background="#C3C3C3"
        android:layout_marginTop="25dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <Button
        android:id="@+id/btn_login_with_facebook"
        android:drawableRight="@drawable/faace"
        android:layout_gravity="center"
        android:text="Login with facebook"
        android:textAllCaps="false"
        android:textColor="#367400"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/login_share_button"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login_sign_up"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/login_login_button"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="#F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>

    </LinearLayout>

</LinearLayout>