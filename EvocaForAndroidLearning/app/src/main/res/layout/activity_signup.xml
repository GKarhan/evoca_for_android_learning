<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:indeterminateOnly="true"
        android:indeterminateDrawable="@drawable/progress_bar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            >

            <ImageView
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


       
        <LinearLayout
            android:id="@+id/exi"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="@string/fill_the_form"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#367400"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:text="@string/name"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="7dp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:paddingLeft="5dp"
                android:id="@+id/et_sign_up_first_name"
                android:background="@drawable/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/surname"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="7dp"
                android:imeOptions="actionNext"
                android:paddingLeft="5dp"
                android:id="@+id/et_sign_up_last_name"
                android:inputType="text"
                android:background="@drawable/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:text="@string/email"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="7dp"
                android:imeOptions="actionNext"
                android:paddingLeft="5dp"
                android:id="@+id/et_sign_up_email"
                android:inputType="text"
                android:background="@drawable/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:text="@string/password"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="7dp"
                android:imeOptions="actionNext"
                android:paddingLeft="5dp"
                android:id="@+id/et_sign_up_password"
                android:inputType="textPassword"
                android:background="@drawable/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/confirm_password"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="7dp"
                android:imeOptions="actionDone"
                android:paddingLeft="5dp"
                android:id="@+id/et_sign_up_confirm_password"
                android:inputType="textPassword"
                android:background="@drawable/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_sign_up"
                android:background="@drawable/login_login_button"
                android:text="@string/submit"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="#F4F4F4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
