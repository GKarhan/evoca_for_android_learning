
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditTextFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:layout_height="0dp"
        android:layout_weight="1.3">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/tv_title"
                android:gravity="center|bottom"
                android:text="Exercise1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#367400"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_edit_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Loren ipsum is _____ dummy text of the printing and typesetting indusstry"
                android:textSize="16sp" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8b367400"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <EditText
                android:inputType="text"
                android:imeOptions="actionDone"
                android:paddingLeft="8dp"
                android:background="@drawable/login_username"
                android:hint="Ձեր պատասխանը"
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1">

                <TextView
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/tv_answer"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:background="@null"
                    android:visibility="gone"
                    android:id="@+id/btn_answer"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_chack"
            android:textColor="#F4F4F4"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="Check"
            android:layout_weight="0.7"
            android:background="#367400"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
</LinearLayout>
